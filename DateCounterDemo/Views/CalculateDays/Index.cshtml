
@{
    ViewData["Title"] = "Index";
}
<div class="container-full">
    <div class="row">
        <div class="col-lg-12">
            <div class="panel panel-default">
                <div class="panel-heading">
                    Days Counter
                </div>               
                <div class="panel-body">
                    <div class="row">
                        <div class="col-lg-6">
                            <h3>Week Days Calculator</h3>
                            <div class="form-group">
                                <label for="firstweekday">First Date</label>
                                <div id="datepickerweekdayfirst" class="input-group date" data-date-format="dd-mm-yyyy">
                                    <input class="form-control" type="text" readonly id="firstweekday" />
                                    <span class="input-group-addon"><i class="glyphicon glyphicon-calendar"></i></span>
                                </div>
                            </div>
                            <div class="form-group">
                                <label for="secondweekday">Second Date</label>
                                <div id="datepickerweekdaysec" class="input-group date" data-date-format="dd-mm-yyyy">
                                    <input class="form-control" type="text" readonly id="secondweekday" />
                                    <span class="input-group-addon"><i class="glyphicon glyphicon-calendar"></i></span>
                                </div>
                            </div>
                            <div class="submit">
                                <button id="getweekday" type="submit" class="btn btn-primary">Get Weekdays</button>
                            </div>
                            <div class="space20"></div>
                            <div class="form-group">
                                <label for="weekdaysReturn">Result</label>
                                <div id="weekdaysReturn" class="alert alert-success" role="alert" style="height: 100px;">
                                </div>
                            </div>
                        </div>
                        <div class="col-lg-6">
                            <h3>Business Dyas Calculator</h3>
                            <div class="form-group">
                                <label for="firstweekday">First Date</label>
                                <div id="datepickerbusdayfirst" class="input-group date" data-date-format="dd-mm-yyyy">
                                    <input class="form-control" type="text" readonly id="firstbusday" />
                                    <span class="input-group-addon"><i class="glyphicon glyphicon-calendar"></i></span>
                                </div>
                            </div>
                            <div class="form-group">
                                <label for="secondweekday">Second Date</label>
                                <div id="datepickerbusdaysec" class="input-group date" data-date-format="dd-mm-yyyy">
                                    <input class="form-control" type="text" readonly id="secondbusday" />
                                    <span class="input-group-addon"><i class="glyphicon glyphicon-calendar"></i></span>
                                </div>
                            </div>
                            <div class="form-group">
                                <label for="holidayList">Custom Holiday List</label>
                                <p>Input List of date. One for each line. Date format : dd-mm-yyyy</p>
                                <dl class="row">
                                    <dt class="col-sm-3">For example:</dt>
                                    <dd class="col-sm-9">25-12-2013</dd>
                                    <dt class="col-sm-3"></dt>
                                    <dd class="col-sm-9">26-12-2013</dd>
                                    <dt class="col-sm-3"></dt>
                                    <dd class="col-sm-9">01-01-2014</dd>
                                </dl>
                                <textarea class="form-control" id="holidayList" rows="5"></textarea>
                            </div>
                            <div class="submit">
                                <button id="getbusday" type="submit" class="btn btn-primary">Get Businessdays</button>
                            </div>
                            <div class="space20"></div>
                            <div class="form-group">
                                <label for="businessdaysReturn">Result</label>
                                <div id="businessdaysReturn" class="alert alert-success" role="alert" style="height: 100px;">
                                </div>
                            </div>
                        </div>
                        <!-- /.panel-body -->
                    </div>
                    <!-- /.panel -->
                </div>
            </div>
            <!-- /.col-lg-12 -->
        </div>
        <!-- /.row -->
    </div>
</div>

